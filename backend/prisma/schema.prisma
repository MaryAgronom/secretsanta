generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  surname  String
  email    String    @unique
  password String
  userInfo UserInfo?
}

model UserInfo {
  id      Int    @id @default(autoincrement())
  avatar  String
  adresss String
  size    String
  allergy String
  userId  Int    @unique
  user    User   @relation(fields: [userId], references: [id])
}
